{
"manifest_version": 2,
"name": "rxrf",
"version": "3.0.0",
"description": "Filter requests by matching host names against regular expression patterns",
"permissions": [
  "webRequest",
  "webRequestBlocking",
  "https://*/*",
  "http://*/*",
  "ftp://*/*",
  "file://*/*"
],
"background": {
  "scripts": ["rxrf-bg.js"]
},
"applications": {
  "gecko": {
    "id": "rxrf@serock.github.io"
  }
}
}
